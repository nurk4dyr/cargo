<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MapActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:drawerLayoutCornerSize="5dp" />

    <FrameLayout
        android:id="@+id/mainUIGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainUI"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_menu"
                android:elevation="4dp"
                android:background="@drawable/bg_image_button"

                android:layout_marginTop="13dp"
                android:layout_marginStart="16dp"

                app:layout_constraintTop_toTopOf="@id/mainUI"
                app:layout_constraintLeft_toLeftOf="@id/mainUI"/>

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_notification"
                android:elevation="4dp"
                android:background="@drawable/bg_image_button"

                android:layout_marginTop="13dp"
                android:layout_marginEnd="16dp"

                app:layout_constraintTop_toTopOf="@id/mainUI"
                app:layout_constraintRight_toRightOf="@id/mainUI"/>

            <LinearLayout
                android:id="@+id/typeGroup"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_default_elevation"
                android:elevation="4dp"

                android:layout_marginTop="13dp"

                app:layout_constraintTop_toTopOf="@id/mainUI"
                app:layout_constraintLeft_toLeftOf="@id/mainUI"
                app:layout_constraintRight_toRightOf="@id/mainUI">

                <RelativeLayout
                    android:id="@+id/typeTaxi"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/rp_default">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="7dp"
                        android:layout_centerHorizontal="true"

                        android:src="@drawable/ic_car"
                        android:contentDescription="Type" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"

                        android:fontFamily="@font/inter_regular"
                        android:textSize="10sp"
                        android:text="@string/taxiText"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/typeDelivery"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:alpha="0.3"
                    android:background="@drawable/rp_default">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="7dp"
                        android:layout_centerHorizontal="true"

                        android:src="@drawable/ic_truck"
                        android:contentDescription="Type" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"

                        android:fontFamily="@font/inter_regular"
                        android:textSize="10sp"
                        android:text="@string/deliveryText"/>

                </RelativeLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/pin"
                android:layout_width="50dp"
                android:layout_height="70dp"

                android:src="@drawable/ic_pin"

                app:layout_constraintTop_toTopOf="@id/mainUI"
                app:layout_constraintBottom_toBottomOf="@id/mainUI"
                app:layout_constraintLeft_toLeftOf="@id/mainUI"
                app:layout_constraintRight_toRightOf="@id/mainUI"
                android:layout_marginBottom="150dp"/>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_default_elevation"
                android:elevation="4dp"

                app:layout_constraintRight_toRightOf="@id/mainUI"
                app:layout_constraintTop_toTopOf="@id/mainUI"
                app:layout_constraintBottom_toBottomOf="@id/mainUI">

                <ImageButton
                    android:id="@+id/mapZoomIn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:background="@drawable/rp_default"
                    android:src="@drawable/ic_plus" />

                <ImageButton
                    android:id="@+id/mapZoomOut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:background="@drawable/rp_default"
                    android:src="@drawable/ic_minus" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"

                android:background="@drawable/bg_image_button"
                android:src="@drawable/ic_location"
                android:elevation="4dp"

                app:layout_constraintTop_toTopOf="@id/mainUI"
                app:layout_constraintBottom_toBottomOf="@id/mainUI"
                app:layout_constraintRight_toRightOf="@id/mainUI"
                app:layout_constraintVertical_bias="0.7"/>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="6dp">

                <include
                    android:id="@+id/bottomSheetTaxi"
                    layout="@layout/bottom_sheet_taxi" />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>