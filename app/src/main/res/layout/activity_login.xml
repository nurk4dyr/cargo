<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity"

    android:id="@+id/login_ui">

    <ImageView
        android:id="@+id/login_tablet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/tablet_login"

        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/banner_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"

        android:text="Похоже вы не зарегистрированы в нашей системе"
        android:fontFamily="@font/inter_semibold"
        android:textSize="23sp"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toBottomOf="@id/login_tablet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/banner_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"

        android:text="Хотите пройти быструю регистрацию?\nЭто не займет много времени"
        android:textSize="16sp"
        android:fontFamily="@font/inter_light"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/banner_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reg_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"

        android:text="Зарегистрироваться"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium"

        android:background="@drawable/bg_reg_button"
        android:paddingHorizontal="50dp"
        android:paddingVertical="20dp"
        android:layout_marginTop="40dp"

        app:layout_constraintTop_toBottomOf="@id/banner_desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/auth_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"

        android:text="Войти"
        android:textColor="@color/orange"
        android:fontFamily="@font/inter_medium"

        android:background="@drawable/bg_auth_button"
        android:paddingHorizontal="50dp"
        android:paddingVertical="20dp"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/reg_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp">

        <include
            android:id="@+id/bs_registration"
            layout="@layout/bs_registration" />

        <include
            android:id="@+id/bs_auth"
            layout="@layout/bs_auth" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>